/* pages/transfer/Transfer.wxss */
.container {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-top: 150rpx;
}

.input {
  border-style: solid;
  border-width: 1px;
  border-color: gainsboro;
  border-radius: 5rpx;
  padding: 5rpx;
}

.phone {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
}
.phone text {
  margin-right: 20rpx;
}

.auth_code {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
}
.auth_code text {
  width: 140rpx;
  height: 75rpx;
}
.auth_code input {
  margin-right: 20rpx;
  width: 250rpx;
}
.auth_code button {
  width: 320rpx;
}

.register {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 100rpx;
}
